# ytclipper-go Environment Configuration Example

# Server Configuration
YTCLIPPER_PORT=8080
YTCLIPPER_DEBUG=true

# Basic Authentication (optional)
YTCLIPPER_AUTH_USERNAME=""
YTCLIPPER_AUTH_PASSWORD=""

# YouTube Cookie Configuration
YTCLIPPER_YT_DLP_COOKIES_FILE=""
YTCLIPPER_YT_DLP_COOKIES_CONTENT=""
YTCLIPPER_YT_DLP_PROXY=""

# Cookie Monitoring Configuration
YTCLIPPER_COOKIE_MONITOR_ENABLED=true
YTCLIPPER_COOKIE_MONITOR_INTERVAL_HOURS=24
YTCLIPPER_COOKIE_MONITOR_WARNING_THRESHOLD_DAYS=30
YTCLIPPER_COOKIE_MONITOR_URGENT_THRESHOLD_DAYS=7
YTCLIPPER_COOKIE_MONITOR_NTFY_TOPIC="ytclipper-cookies"

# Ntfy Notification Configuration (Global)
YTCLIPPER_NTFY_ENABLED=false
YTCLIPPER_NTFY_SERVER_URL="https://ntfy.sh"

# Video Processing Configuration
YTCLIPPER_YT_DLP_CLIP_SIZE_LIMIT_IN_MB=300
YTCLIPPER_YT_DLP_COMMAND_TIMEOUT_IN_SECONDS=60
YTCLIPPER_YT_DLP_EXTRACTOR_RETRIES=3
YTCLIPPER_YT_DLP_SLEEP_INTERVAL=2
YTCLIPPER_YT_DLP_ENABLE_USER_AGENT_ROTATION=true

# Rate Limiting Configuration
YTCLIPPER_RATE_LIMITER_RATE=5
YTCLIPPER_RATE_LIMITER_BURST=20
YTCLIPPER_RATE_LIMITER_EXPIRES_IN_MINUTES=1

# Cleanup Scheduler Configuration
YTCLIPPER_CLIP_CLEANUP_SCHEDULER_ENABLED=true
YTCLIPPER_CLIP_CLEANUP_SCHEDULER_INTERVAL_IN_MINUTES=5
YTCLIPPER_CLIP_CLEANUP_SCHEDULER_CLIP_DIRECTORY_PATH="./videos"